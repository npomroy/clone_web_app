<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="well row">
                <div class="col-sm-4">
                    <%= image_tag @user.profile.avatar.url, class: "img-profile-show" %>
                </div>
                <div class="col-md-8">
                    <h2><%= @user.profile.first_name %> <%= @user.profile.last_name %></h2>
                    <h5><%= @user.profile.contact_email %></h5>
                    <div class="well profile-block">
                        <h3>Description</h3>
                        <p><%= @user.profile.description %></p>
                    </div>
                    <%= link_to "Account Management", edit_user_registration_path, class: "btn btn-default" %>
                    <%= link_to "Update Profile", edit_user_profile_path(user_id: params[:id]), class: "btn btn-primary" %>
                </div>
            </div>
        </div>
    </div>
</div>
